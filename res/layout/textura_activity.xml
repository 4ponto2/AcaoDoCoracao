<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcdfe1"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".TexturaActivity" >

    <HorizontalScrollView
        android:id="@+id/HorizontalScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/textBtn1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text1" />
            <ImageButton
                android:id="@+id/textBtn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text2" />
            <ImageButton
                android:id="@+id/textBtn3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text3" />
            <ImageButton
                android:id="@+id/textBtn4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text4" />
            <ImageButton
                android:id="@+id/textBtn5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text5" />
            <ImageButton
                android:id="@+id/textBtn6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text6" />
            <ImageButton
                android:id="@+id/textBtn7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text7" />
            <ImageButton
                android:id="@+id/textBtn8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text8" />
            <ImageButton
                android:id="@+id/textBtn9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text9" />
            <ImageButton
                android:id="@+id/textBtn10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectCoracao"
                android:src="@drawable/text10" />
            
            <!-- GRUPO 2 -->
                  

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img1"
        android:visibility="invisible" />
        
        <ImageView
        android:id="@+id/img2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" 
        android:src="@drawable/img2" />
        
        <ImageView
        android:id="@+id/img3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" 
        android:src="@drawable/img3" />
        
        <ImageView
        android:id="@+id/img4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" 
        android:src="@drawable/img4" />
        
        <ImageView
        android:id="@+id/img5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" 
        android:src="@drawable/img5" />
        
        <ImageView
        android:id="@+id/img6"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" 
        android:src="@drawable/img6" />
        
        <ImageView
        android:id="@+id/img7"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" 
        android:src="@drawable/img7" />
        
        <ImageView
        android:id="@+id/img8"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" 
        android:src="@drawable/img8" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/top_logo" />

        <Button
            android:id="@+id/select"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_above="@+id/HorizontalScrollView1"
            android:layout_centerHorizontal="true"
            android:text="Selecionar"
            android:visibility="invisible" />

</RelativeLayout>